<div class="chatbot-widget">
  <button id="chatbot-toggle" class="chatbot-toggle" aria-label="Open chat">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>
  </button>

  <div id="chatbot-container" class="chatbot-container chatbot-hidden">
    <div class="chatbot-header">
      <span>Ask about Martin</span>
      <button id="chatbot-close" class="chatbot-close" aria-label="Close chat">&times;</button>
    </div>
    <div id="chatbot-messages" class="chatbot-messages">
      <div class="chatbot-message chatbot-bot">Hi! Ask me anything about Martin's background, skills, or experience.</div>
    </div>
    <form id="chatbot-form" class="chatbot-form">
      <input
        type="text"
        id="chatbot-input"
        class="chatbot-input"
        placeholder="Type a message..."
        maxlength="500"
        autocomplete="off"
      />
      <button type="submit" class="chatbot-submit">Send</button>
    </form>
  </div>
</div>

<style>
  .chatbot-widget {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 1000;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 14px;
  }

  .chatbot-hidden {
    display: none !important;
  }

  .chatbot-toggle {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    border: 3px solid #000;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.15s ease;
    background: #79a8ff;
    color: #000;
    box-shadow: 4px 4px 0 #000;
  }

  .chatbot-toggle:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #000;
  }

  .chatbot-container {
    width: 340px;
    max-width: calc(100vw - 40px);
    height: 420px;
    max-height: calc(100vh - 100px);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    border: 3px solid #000;
    box-shadow: 6px 6px 0 #000;
    background: #fff;
  }

  .chatbot-header {
    padding: 12px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
    background: #fef08a;
    border-bottom: 3px solid #000;
  }

  .chatbot-close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    line-height: 1;
    padding: 0;
    width: 28px;
    height: 28px;
    color: #000;
  }

  .chatbot-close:hover {
    opacity: 0.7;
  }

  .chatbot-messages {
    flex: 1;
    overflow-y: auto;
    padding: 12px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    background: #fff;
  }

  .chatbot-message {
    max-width: 85%;
    padding: 10px 12px;
    border-radius: 8px;
    line-height: 1.4;
    word-wrap: break-word;
    border: 2px solid #000;
  }

  .chatbot-user {
    align-self: flex-end;
    background: #79a8ff;
    color: #000;
  }

  .chatbot-bot {
    align-self: flex-start;
    background: #f0f0f0;
    color: #000;
  }

  .chatbot-form {
    display: flex;
    padding: 12px;
    gap: 8px;
    background: #fef08a;
    border-top: 3px solid #000;
  }

  .chatbot-input {
    flex: 1;
    padding: 10px 12px;
    border-radius: 6px;
    border: 2px solid #000;
    font-size: 14px;
    outline: none;
    background: #fff;
  }

  .chatbot-input:focus {
    box-shadow: 2px 2px 0 #000;
  }

  .chatbot-submit {
    padding: 10px 16px;
    border: 2px solid #000;
    border-radius: 6px;
    cursor: pointer;
    font-size: 14px;
    font-weight: bold;
    background: #79a8ff;
    color: #000;
    box-shadow: 2px 2px 0 #000;
    transition: all 0.1s ease;
  }

  .chatbot-submit:hover {
    transform: translate(-1px, -1px);
    box-shadow: 3px 3px 0 #000;
  }

  .chatbot-submit:active {
    transform: translate(1px, 1px);
    box-shadow: 1px 1px 0 #000;
  }

  /* Mobile styles */
  @media (max-width: 480px) {
    .chatbot-widget {
      bottom: 16px;
      right: 16px;
    }

    .chatbot-container {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      max-width: 100%;
      height: 100%;
      max-height: 100%;
      border-radius: 0;
      border: none;
      box-shadow: none;
    }

    .chatbot-header {
      padding: 16px 20px;
      border-radius: 0;
    }

    .chatbot-close {
      width: 44px;
      height: 44px;
      font-size: 28px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .chatbot-messages {
      padding: 16px;
    }

    .chatbot-form {
      padding: 16px;
      gap: 12px;
    }

    .chatbot-input {
      padding: 14px 16px;
      font-size: 16px; /* Prevents iOS zoom on focus */
    }

    .chatbot-submit {
      padding: 14px 20px;
      font-size: 16px;
    }
  }
</style>

<script>
  const API_URL = "https://guardrail.5d2z4xvxvd.workers.dev/chat";
  let conversationHistory: {role: string, content: string}[] = [];

  function initChatbot() {
    const toggle = document.getElementById('chatbot-toggle');
    const container = document.getElementById('chatbot-container');
    const close = document.getElementById('chatbot-close');
    const form = document.getElementById('chatbot-form');
    const input = document.getElementById('chatbot-input') as HTMLInputElement;
    const messages = document.getElementById('chatbot-messages');

    if (!toggle || !container || !close || !form || !input || !messages) return;

    // Remove old listeners by cloning
    const newToggle = toggle.cloneNode(true);
    const newClose = close.cloneNode(true);
    const newForm = form.cloneNode(true) as HTMLFormElement;

    toggle.parentNode?.replaceChild(newToggle, toggle);
    close.parentNode?.replaceChild(newClose, close);
    form.parentNode?.replaceChild(newForm, form);

    const newInput = newForm.querySelector('#chatbot-input') as HTMLInputElement;

    const isMobile = () => window.innerWidth <= 480;

    newToggle.addEventListener('click', function() {
      container.classList.remove('chatbot-hidden');
      newToggle.classList.add('chatbot-hidden');
      if (isMobile()) document.body.style.overflow = 'hidden';
      newInput?.focus();
    });

    newClose.addEventListener('click', function() {
      container.classList.add('chatbot-hidden');
      newToggle.classList.remove('chatbot-hidden');
      document.body.style.overflow = '';
    });

    newForm.addEventListener('submit', async function(e) {
      e.preventDefault();

      const message = newInput.value.trim();
      if (!message) return;

      addMessage(message, 'user', messages);
      newInput.value = '';
      newInput.disabled = true;

      const loading = addMessage('...', 'bot', messages);

      try {
        conversationHistory.push({
          role: "user",
          content: message
        });
        const response = await fetch(API_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ messages: conversationHistory }),
        });

        const data = await response.json();

        if (response.ok && data && data[0] && data[0].text) {
          loading.textContent = data[0].text;
          conversationHistory.push({
            role: "assistant",
            content: data[0].text
          });
        } else if (data.error) {
          loading.textContent = 'Sorry, ' + data.error.toLowerCase();
        } else {
          loading.textContent = response.ok ? "Sorry, I couldn't understand the response." : 'Sorry, something went wrong.';
        }
      } catch (err) {
        loading.textContent = 'Sorry, something went wrong. Please try again.';
      }

      newInput.disabled = false;
      newInput.focus();
    });
  }

  function addMessage(text: string, type: string, container: HTMLElement) {
    const div = document.createElement('div');
    div.className = 'chatbot-message chatbot-' + type;
    div.textContent = text;
    container.appendChild(div);
    container.scrollTop = container.scrollHeight;
    return div;
  }

  // Run on initial load and after view transitions
  initChatbot();
  document.addEventListener('astro:after-swap', initChatbot);
</script>
